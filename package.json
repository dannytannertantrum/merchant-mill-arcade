{
  "name": "merchant-mill-arcade-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "create-db-schema": "psql postgres < database/schema.sql",
    "create-test-db-schema": "psql postgres < database/test-schema.sql",
    "create-migration": "node -r dotenv/config database/migrate create --name",
    "dev": "nodemon -r dotenv/config ./server",
    "migrate:down": "node -r dotenv/config database/migrate down",
    "migrate-test:down": "NODE_ENV=TEST node -r dotenv/config database/migrate down",
    "migrate:fully-down": "node -r dotenv/config database/migrate down --to 0",
    "migrate-test:fully-down": "NODE_ENV=TEST node -r dotenv/config database/migrate down --to 0",
    "migrate:up": "node -r dotenv/config database/migrate up",
    "migrate-test:up": "NODE_ENV=TEST node -r dotenv/config database/migrate up",
    "seed": "node -r dotenv/config database/seed.js",
    "seed-test": "NODE_ENV=TEST node -r dotenv/config database/seed.js",
    "start-client": "cd client && npm start",
    "test": "NODE_ENV=TEST jest --silent",
    "test-watch": "NODE_ENV=TEST jest --watch --silent",
    "typecheck": "npx tsc",
    "typecheck-watch": "npx tsc --watch"
  },
  "author": "Jaime",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "@sinclair/typebox": "^0.23.4",
    "dotenv": "^16.0.0",
    "fastify": "^3.27.4",
    "fastify-plugin": "^3.0.1",
    "fastify-swagger": "^4.13.0",
    "slonik": "^26.2.2",
    "slonik-interceptor-field-name-transformation": "^1.6.4"
  },
  "devDependencies": {
    "@slonik/migrator": "^0.11.0",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.23",
    "@types/pg": "^8.6.5",
    "@types/slonik": "^22.1.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^28.0.3",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.2",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "uuid": "^8.3.2"
  }
}
