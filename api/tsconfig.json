{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./built",
        "strictNullChecks": true,
        "target": "es5",
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
