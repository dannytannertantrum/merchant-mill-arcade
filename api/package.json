{
  "name": "merchant-mill-arcade-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "create-db-schema": "psql postgres < database/schema.sql",
    "create-migration": "node -r dotenv/config database/migrate create --name",
    "dev": "nodemon -r dotenv/config src/server",
    "migrate:down": "node -r dotenv/config database/migrate down",
    "migrate:fully-down": "node -r dotenv/config database/migrate down --to 0",
    "migrate:up": "node -r dotenv/config database/migrate up",
    "seed": "node -r dotenv/config database/seed.js",
    "start": "node src/server",
    "test": "jest",
    "typecheck": "npx tsc",
    "typecheck-watch": "npx tsc --watch"
  },
  "author": "Jaime",
  "license": "ISC",
  "dependencies": {
    "@sinclair/typebox": "^0.23.1",
    "dotenv": "^10.0.0",
    "fastify": "^3.25.0",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^4.13.0",
    "slonik": "^26.2.2",
    "slonik-interceptor-field-name-transformation": "^1.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@slonik/migrator": "^0.9.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.1",
    "@types/pg": "^8.6.3",
    "@types/slonik": "^22.1.5",
    "@types/uuid": "^8.3.3",
    "babel-jest": "^27.4.6",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
